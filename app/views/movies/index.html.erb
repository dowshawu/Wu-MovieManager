<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table id="musicTable" class="display" width="100%" style="width:100%;">
  <thead>
    <tr>
      <th >Title</th>
      <th data-hide="phone" data-name="Format">Format</th>
      <th data-hide="phone,tablet" data-name="Length">Length(HH:MM)</th>
      <th data-hide="phone,tablet" data-name="Size">Release Year</th>
      <th data-hide="phone,tablet" data-name="Size">Rating</th>
      <th display:none>
      <th display:none>
      <th display:none>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.format %></td>
        <td><%= movie.length.hour %>:<%= movie.length.min %></td>
        <td><%= movie.release_year %></td>
        <td><%= movie.rating %></td>
        <td><%= link_to 'Show', {:action => 'show', :id => movie.id, :user_id => params[:user_id] } %></td>
        <td><%= link_to 'Edit', {:action => 'edit', :id => movie.id, :user_id => params[:user_id] } %></td>
        <td><%= link_to 'Destroy', {:action => 'destroy', :id => movie.id, :user_id => params[:user_id] }, method: :delete,  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

